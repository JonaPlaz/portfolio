{% extends 'base.html.twig' %}

{% block title %}Stats - Jona Web Developer
{% endblock %}

{% block body %}

	<table class="visitors_table">
		<tr class="visitors_row_titles">
			<td>visitor ip</td>
			<td>cv version</td>
			<td>nb of visits</td>
		</tr>
		{% for visit in visits %}
			<tr class="visitors_rows_content">
				<td>{{ visit.ip }}</td>
				<td>{{ visit.cv.version }}</td>
				<td>{{ visit.numberOfVisits }}</td>
			</tr>
		{% endfor %}
	</table>

	<div class="visitors_total">
		<p>NOMBRE TOTAL DE VISITES :
			{{ total_visits_number }}</p>
		<p>NOMBRE TOTAL D'IP :
			{{ total_ip_number }}</p>
	</div>

{% endblock %}
